{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Suicide Rate in Countries in 2019",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "params": [
        {
          "name": "suicide_above",
          "value": 0,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 30,
            "step": 1,
            "name": "Minimum Number of Suicides: "
          }
        }
  ],
  
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Bot1234-dotcom/Data-Visualisation-2/refs/heads/main/js/world_map_with_graticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
    "transform": [
      {
        "lookup": "properties.NAME_CIAWF",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/Bot1234-dotcom/Data-Visualisation-2/refs/heads/main/data/suicide_rate.csv"
          },
          "key": "Country",
          "fields": ["Suicides_Per_100k"]
        }  
      },
      {"filter": "datum.Suicides_Per_100k > suicide_above"}
    ],
    "encoding": {
      "color": {
        "field": "Suicides_Per_100k",
        "type": "quantitative",
        "title": "Suicides Per 100,000",
        "scale": {
          "type": "threshold",
          "domain": [5, 10, 15],
          "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
        }
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country:"},
        {"field": "Suicides_Per_100k", "type": "quantitative", "title": "Suicides:", "format": ".2f"}
        ]
    },
      "mark": {"type": "geoshape", "stroke": "darkgray"}
      
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Bot1234-dotcom/Data-Visualisation-2/refs/heads/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Bot1234-dotcom/3179_Homework_W9/refs/heads/main/js/WorldMapwithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
    
  ]
}